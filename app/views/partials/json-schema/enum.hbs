{{#if description}}
  <section class="json-schema-description">
    {{md description}}
  </section>
  {{#if anyOf}}
    <section class="json-schema-properties-enum">
      <table>
        <tr>
          <th>Enum Value</th>
          <th>Description</th>
        </tr>
        {{#each anyOf}}
          <tr>
            {{! The Value column }}
            <td>{{md (codify enum.[0])}}</td>
            <td>
              {{! The Description column }}
              {{#if description}}
                {{md description}}
              {{/if}}
            </td>
          </tr>
        {{/each}}
      </table>
    </section>
  {{/if}}
{{/if}}

{{!-- Old way of doing Enum values
